{
  "name": "a11y-sla-breach-labels",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to manage accessibility SLA breach labels on issues.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "ncc build src/main.ts --license ../../../licenses.txt",
    "test": "mocha src/*.test.ts",
    "coverage": "nyc npm run test",
    "fmt": "prettier --write \"src/**/*.{js,ts,tsx,json,md,css,html}\"",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\""
  },
  "license": "MPL-2.0",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@types/node": "^22.7.9"
  },
  "nyc": {
    "checkCoverage": true,
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "exclude": [
      "dist",
      "coverage",
      "**/*.test.ts"
    ]
  }
}
